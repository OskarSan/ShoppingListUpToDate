<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#C6BED6"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="520dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Tuote"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/editProductNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Muokkaa tuotetta"
                android:inputType="textPersonName"
                android:textSize="1sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/productInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="LisÃ¤Tietoja"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editProductInfoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Muokkaa tietoja"
                android:inputType="textPersonName"
                android:textSize="1sp"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/baseline_edit_24" />

            <ImageView
                android:id="@+id/imgRemove"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/delete" />
        </LinearLayout>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>